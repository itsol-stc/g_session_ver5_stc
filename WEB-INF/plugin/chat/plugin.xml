<?xml version="1.0" encoding="UTF-8" ?>

<plugin>

  <!-- プラグインID -->
  <id>chat</id>
  <short-id>cht</short-id>

  <!-- 名称  -->
  <name>チャット</name>
  <name-eng>Chat</name-eng>

  <!-- 説明  -->
  <description>
  ユーザ同士で短文メッセージを送信することができます。
  メッセージの受信はGroupSessionにログインしている限り自動で行われます。
  </description>

  <!-- リクエストに付加するパラメータ  -->
  <request-param>
    <!-- パラメータ名  -->
    <param-name>url</param-name>
    <!-- パラメータ値  -->
    <param-value>http://www.sjts.co.jp</param-value>
  </request-param>
  <request-param>
    <!-- パラメータ名  -->
    <param-name>url</param-name>
    <!-- パラメータ値  -->
    <param-value>http://www.sjts.co.jp</param-value>
  </request-param>


  <!-- バッチ処理の実行を行うリスナー  -->
  <listener>
    <!-- リスナー名  -->
    <listener-name>batchjob</listener-name>
    <!-- リスナー実装クラス  -->
    <listener-class>jp.groupsession.v2.cht.ChtBatchListenerImpl</listener-class>
  </listener>

  <!-- メイン画面のインフォーメーションメッセージを表示する際に呼び出されるリスナー  -->
  <listener>
    <!-- リスナー名  -->
    <listener-name>mainInfo</listener-name>
    <!-- リスナー実装クラス  -->
    <listener-class>jp.groupsession.v2.cht.ChtMainInfoMessage</listener-class>
  </listener>

  <!-- ユーザのログイン・ログアウトの際に呼び出されるリスナー  -->
  <listener>
    <listener-name>loginlogoutlistener</listener-name>
    <!-- リスナー実装クラス  -->
    <listener-class>jp.groupsession.v2.cht.ChtGsLoginLogoutListenerImpl</listener-class>
  </listener>

  <!-- ユーザ・グループの追加・修正の際に呼び出されるリスナー  -->
  <listener>
    <!-- リスナー名  -->
    <listener-name>userlistener</listener-name>
    <!-- リスナー実装クラス  -->
    <listener-class>jp.groupsession.v2.cht.ChtIUserGroupListenerImpl</listener-class>
  </listener>
  <!-- 自動削除設定の際に呼び出されるリスナー  -->
  <listener>
    <!-- リスナー名  -->
    <listener-name>autoManualDeletelistener</listener-name>
    <!-- リスナー実装クラス  -->
    <listener-class>jp.groupsession.v2.cht.ChtIAutoManualDeleteListenerImpl</listener-class>
  </listener>

  <!-- データ使用量の操作時に呼び出されるリスナー  -->
  <listener>
    <!-- リスナー名  -->
    <listener-name>useddatalistener</listener-name>
    <!-- リスナー実装クラス  -->
    <listener-class>jp.groupsession.v2.cht.ChtUsedDetailListenerImpl</listener-class>
  </listener>


  <!-- 拡張ポイント 他のプラグインからも利用可能な情報を記述する -->
  <extention-info>
    <!-- 拡張ポイント名  -->
    <name>user_info_view</name>
    <!-- 拡張ポイントURL  -->
    <url>/user/usr000.do</url>
    <!-- 拡張ポイントの説明  -->
    <description>
    パラメータ「usid」にユーザSID値をセットし、上記URLにアクセスすると、
    該当するユーザSIDのユーザ情報を表示します。
    画面サイズが400*200になっているので、JavaScriptのOpenWindowでサイズを
    指定し、使用してください。
    </description>
  </extention-info>

  <!-- メイン画面表示 メイン画面に表示する情報を記述する -->



  <!-- トップメニュー トップメニューの情報を記述する 記述しない場合はメニューに表示しない  -->
  <topmenu-info>
    <!-- メニューへの表示/非表示 -->
    <view>true</view>
    <!-- メニューアイコンクリック時に遷移するURL -->
    <url>../chat/cht010.do</url>
    <!-- メニューアイコンの表示順 未設定の場合は表示順が設定されているプラグインの次に表示する -->
    <order></order>
  </topmenu-info>

  <!-- ヘルプ情報を設定する。 -->
  <help-info>
    <!-- メニューの表示/非表示 -->
    <view>true</view>
  </help-info>

  <!-- メイン管理者設定画面に表示する情報を記述する  -->
  <adminsetting-info>
    <!-- メイン管理者設定画面への表示/非表示 未設定の場合は表示しない -->
    <view>true</view>
    <!-- 管理者設定メニューURL -->
    <url>../chat/cht020.do</url>
    <!-- アイコン -->
    <icon>../chat/images/original/menu_icon_single.png</icon>
    <iconClassic>../chat/images/classic/menu_icon_single.gif</iconClassic>
  </adminsetting-info>

  <!-- メイン個人設定画面に表示する情報を記述する  -->
  <privatesetting-info>
    <!-- メイン個人設定画面への表示/非表示 未設定の場合は表示しない -->
    <view>true</view>
    <!-- 個人設定メニューURL -->
    <url>../chat/cht030.do</url>
    <!-- アイコン -->
    <icon>../chat/images/original/menu_icon_single.png</icon>
    <iconClassic>../chat/images/classic/menu_icon_single.gif</iconClassic>
  </privatesetting-info>
  <!-- ログ出力を設定する。 -->
  <log-info>
    <!-- ログ出力 対象/非対象 -->
    <output>true</output>
  </log-info>
</plugin>