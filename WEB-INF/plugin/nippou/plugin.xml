<?xml version="1.0" encoding="Shift_jis" ?>

<plugin>

  <!-- プラグインID -->
  <id>nippou</id>
  <short-id>ntp</short-id>

  <!-- 名称  -->
  <name>日報</name>
  <name-eng>nippou</name-eng>

  <!-- 説明  -->
  <description>
日報を登録し、タイムライン、週間、月間の単位で日報を確認することができます。
  </description>

  <!-- リスナー  -->
  <listener>
    <!-- リスナー名  -->
    <listener-name>userlistener</listener-name>
    <!-- リスナー実装クラス  -->
    <listener-class>jp.groupsession.v2.ntp.NtpIUserGroupListenerImpl</listener-class>
  </listener>
  <!-- バッチ処理の実行を行うリスナー  -->
  <listener>
    <!-- リスナー名  -->
    <listener-name>batchjob</listener-name>
    <!-- リスナー実装クラス  -->
    <listener-class>jp.groupsession.v2.ntp.NippouBatchListenerImpl</listener-class>
  </listener>
  <!-- リスナー  -->
  <!-- listener -->
    <!-- リスナー名  -->
    <!-- listener-name>appendInfo</listener-name -->
    <!-- リスナー実装クラス  -->
    <!-- listener-class>jp.groupsession.v2.ntp.NtpCmn100AppendInfo</listener-class -->
  <!-- /listener -->

  <!-- スケジュールに表示するプロジェクトの情報を返すリスナー  -->
  <listener>
    <!-- リスナー名  -->
    <listener-name>appendSchData</listener-name>
    <!-- リスナー実装クラス  -->
    <listener-class>jp.groupsession.v2.ntp.NtpSchAppendSchData</listener-class>
  </listener>
  <!-- ショートメール通知設定の際に呼び出されるリスナー  -->
  <listener>
    <!-- リスナー名  -->
    <listener-name>smailSendSettinglistener</listener-name>
    <!-- リスナー実装クラス  -->
    <listener-class>jp.groupsession.v2.ntp.NtpISmlSendSettingListenerImpl</listener-class>
  </listener>
  <!-- 自動削除設定の際に呼び出されるリスナー  -->
  <listener>
    <!-- リスナー名  -->
    <listener-name>autoManualDeletelistener</listener-name>
    <!-- リスナー実装クラス  -->
    <listener-class>jp.groupsession.v2.ntp.NtpIAutoManualDeleteListenerImpl</listener-class>
  </listener>

  <!-- データ使用量の操作時に呼び出されるリスナー  -->
  <listener>
    <!-- リスナー名  -->
    <listener-name>useddatalistener</listener-name>
    <!-- リスナー実装クラス  -->
    <listener-class>jp.groupsession.v2.ntp.NtpUsedDetailListenerImpl</listener-class>
  </listener>

  <!-- メイン画面表示 メイン画面に表示する情報を記述する -->
  <mainscreen-info>
    <!-- メイン画面への表示/非表示 未設定の場合は表示しない -->
    <view>false</view>
    <!-- メイン画面へ表示する画面のID javascriptを使用したい場合はこの名前で作成する 未設定の場合は表示しない -->
    <id>ntpmain</id>
    <!-- 表示位置の設定 左=1 右=2  未設定の場合は左へ表示する -->
    <position>1</position>
    <!-- 表示順の設定 未設定の場合は表示順が設定されているプラグインの下に表示する -->
    <order>1</order>
  </mainscreen-info>

  <!-- トップメニュー トップメニューの情報を記述する 記述しない場合はメニューに表示しない  -->
  <topmenu-info>
    <!-- メニューへの表示/非表示 -->
    <view>true</view>
    <!-- メニューアイコンクリック時に遷移するURL -->
    <url>../nippou/ntp010.do</url>
    <order>19</order>
  </topmenu-info>

  <!-- ヘルプ情報を設定する。 -->
  <help-info>
    <!-- メニューの表示/非表示 -->
    <view>true</view>
  </help-info>

  <!-- メイン管理者設定画面に表示する情報を記述する  -->
  <adminsetting-info>
    <!-- メイン管理者設定画面への表示/非表示 未設定の場合は表示しない -->
    <view>true</view>
    <!-- 管理者設定メニューURL -->
    <url>../nippou/ntp080.do</url>
    <!-- アイコン -->
    <icon>../nippou/images/original/menu_icon_single.png</icon>
    <iconClassic>../nippou/images/classic/menu_icon_single.gif</iconClassic>
  </adminsetting-info>

  <!-- メイン個人設定画面に表示する情報を記述する  -->
  <privatesetting-info>
    <!-- メイン個人設定画面への表示/非表示 未設定の場合は表示しない -->
    <view>true</view>
    <!-- 個人設定メニューURL -->
    <url>../nippou/ntp090.do</url>
    <!-- アイコン -->
    <icon>../nippou/images/original/menu_icon_single.png</icon>
    <iconClassic>../nippou/images/classic/menu_icon_single.gif</iconClassic>
  </privatesetting-info>

  <!-- ログ出力を設定する。 -->
  <log-info>
    <!-- ログ出力 対象/非対象 -->
    <output>true</output>
  </log-info>

</plugin>