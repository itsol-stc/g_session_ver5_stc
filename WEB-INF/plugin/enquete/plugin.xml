<?xml version="1.0" encoding="UTF-8" ?>

<plugin>

  <!-- プラグインID -->
  <id>enquete</id>
  <short-id>enq</short-id>

  <!-- 名称  -->
  <name>アンケート</name>
  <name-eng>Questionnaire</name-eng>

  <!-- 説明  -->
  <description>
アンケートを任意のグループ・ユーザーに発信することができます。
アンケートの結果を回答ユーザーに公開することや、匿名でアンケートに回答して頂くこともできます。
  </description>

  <!-- トップメニュー トップメニューの情報を記述する 記述しない場合はメニューに表示しない  -->
  <topmenu-info>
    <!-- メニューへの表示/非表示 -->
    <view>true</view>
    <!-- メニューアイコンクリック時に遷移するURL -->
    <url>../enquete/enq010.do</url>
    <!-- メニューアイコンの表示順 未設定の場合は表示順が設定されているプラグインの次に表示する -->
    <order></order>
  </topmenu-info>

  <!-- リスナー  -->
  <!-- バッチ処理の実行を行うリスナー  -->
  <listener>
    <!-- リスナー名  -->
    <listener-name>batchjob</listener-name>
    <!-- リスナー実装クラス  -->
    <listener-class>jp.groupsession.v2.enq.EnqBatchListenerImpl</listener-class>
  </listener>
  <!-- メイン画面のインフォーメーションメッセージを表示する際に呼び出されるリスナー  -->
  <listener>
    <!-- リスナー名  -->
    <listener-name>mainInfo</listener-name>
    <!-- リスナー実装クラス  -->
    <listener-class>jp.groupsession.v2.enq.EnqMainInfoMessage</listener-class>
  </listener>
  <!-- ユーザ・グループの追加・修正の際に呼び出されるリスナー  -->
  <listener>
    <!-- リスナー名  -->
    <listener-name>userlistener</listener-name>
    <!-- リスナー実装クラス  -->
    <listener-class>jp.groupsession.v2.enq.EnqUserGroupListenerImpl</listener-class>
  </listener>
  <!-- 自動削除設定の際に呼び出されるリスナー  -->
  <listener>
    <!-- リスナー名  -->
    <listener-name>autoManualDeletelistener</listener-name>
    <!-- リスナー実装クラス  -->
    <listener-class>jp.groupsession.v2.enq.EnqIAutoManualDeleteListenerImpl</listener-class>
  </listener>

  <!-- データ使用量の操作時に呼び出されるリスナー  -->
  <listener>
    <!-- リスナー名  -->
    <listener-name>useddatalistener</listener-name>
    <!-- リスナー実装クラス  -->
    <listener-class>jp.groupsession.v2.enq.EnqUsedDetailListenerImpl</listener-class>
  </listener>

    <!-- メイン画面表示 メイン画面に表示する情報を記述する -->
    <mainscreen-info>
    <!-- メイン画面への表示/非表示 未設定の場合は表示しない -->
    <view>true</view>
    <!-- メイン画面へ表示する画面のID javascriptを使用したい場合はこの名前で作成する 未設定の場合は表示しない -->
    <id>enqmain</id>
    <!-- 表示位置の設定 左=1 右=2  未設定の場合は左へ表示する -->
    <position>1</position>
    <!-- 表示順の設定 未設定の場合は表示順が設定されているプラグインの下に表示する -->
    <order>2</order>
    <!-- ポートレット画面への表示/非表示 pluginPortletタグ未記入の場合は非表示 -->
    <pluginPortlet>true</pluginPortlet>
  </mainscreen-info>

  <!-- ヘルプ情報を設定する。 -->
  <help-info>
    <!-- メニューの表示/非表示 -->
    <view>true</view>
  </help-info>

  <!-- メイン管理者設定画面に表示する情報を記述する  -->
  <adminsetting-info>
    <!-- メイン管理者設定画面への表示/非表示 未設定の場合は表示しない -->
    <view>true</view>
    <!-- 管理者設定メニューURL -->
    <url>../enquete/enq900.do</url>
    <!-- アイコン -->
    <icon>../enquete/images/original/menu_icon_single.png</icon>
    <iconClassic>../enquete/images/classic/menu_icon_single.gif</iconClassic>
  </adminsetting-info>

  <!-- メイン個人設定画面に表示する情報を記述する  -->
  <privatesetting-info>
    <!-- メイン個人設定画面への表示/非表示 未設定の場合は表示しない -->
    <view>true</view>
    <!-- 個人設定メニューURL -->
    <url>../enquete/enq800.do</url>
    <!-- アイコン -->
    <icon>../enquete/images/original/menu_icon_single.png</icon>
    <iconClassic>../enquete/images/classic/menu_icon_single.gif</iconClassic>
  </privatesetting-info>

    <!-- ログ出力を設定する。 -->
  <log-info>
    <!-- ログ出力 対象/非対象 -->
    <output>true</output>
  </log-info>

</plugin>